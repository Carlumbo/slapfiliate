{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": [
    "prettier",
    "jest"
  ],
  "rules": {
    "arrow-body-style": "off",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "indent": [
      "error",
      2
    ],
    "no-unused-vars": [
      2,
      {
        "args": "all"
      }
    ],
    "prefer-arrow-callback": "off",
    "prettier/prettier": "error",
    "quotes": [
      "error",
      "single"
    ],
    "semi" : [
      "error",
      "always"
    ]
  }
}
